<div class='row'>
    <div class='col-md-3'>
        <ul class-'list-group'>
            {{#each burger}}
                {{#unless this.devoured}}
                    <li class='list-group-item list-group-item-success'>
                         {{this.id}}. {{this.burger_name}} ordered by {{this.Eater.eater_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="1">
                            {{!--<input type="text" class="form-control" id="eater" placeholder="Eater's Name?">--}}
                            <button type="submit" class="btn btn-primary" id="btn-devour">Devour It</button>
                        </form>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-offset-3 col-md-5">
        <table class='table table-striped tabled-bordered'>
            {{#each burger}}
                {{#if this.devoured}}
                    <tr>
                        <td>
                             {{this.id}}. {{this.burger_name}} <strong>Devoured!</strong> (By: {{this.Eater.eater_name}})
                        </td>
                    </tr>                
                {{/if}}
            {{/each}}
        </table>
    </div>
</div>
    

<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <br><br>
        <form action="/" method="POST">
            <textarea type="text" name="eater_name" id="eater-name" placeholder="Eater's Name?" ></textarea>
	        <textarea type="text" name="burger_name" id="burger-name" placeholder="Burger's Name?" ></textarea>
	        <button type="submit" class="btn btn-default" id="submit">Submit</button>
        </form>
            <br>
            {{>textarea}}
    </div>
</div>







